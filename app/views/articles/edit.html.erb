<h1>Edit Article</h1>
<% if @article.errors.any? %>
  <% @article.errors.full_messages.each do |error| %>
    <ul>
      <li><%= error %></li>
    </ul>
  <% end %>
<% end %>
<%= form_with(model: @article, local: true)  do |f|%>
  <%= f.label :title%><br>
  <%= f.text_field :title %><br>
  <%= f.label :description %><br>
  <%= f.text_area :description%><br>
  <%= submit_tag %>
<% end %>
